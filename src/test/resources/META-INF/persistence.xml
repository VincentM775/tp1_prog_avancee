<?xml version="1.0" encoding="UTF-8"?>
<persistence version="3.0"
             xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence
                                 https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd">

    <!--
        Persistence unit de TEST : utilise H2 en mode In-Memory.
        Avantages :
        - Pas besoin d'installer PostgreSQL pour lancer les tests
        - Base recréée à chaque exécution (isolation totale)
        - Exécution rapide (tout en mémoire)
        - Chargement automatique d'un jeu de données via import.sql
    -->
    <persistence-unit name="testPU" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <class>org.univ_paris8.iut.montreuil.qdev.tp2025.gr22.jeuquizz.demo1.entity.User</class>
        <class>org.univ_paris8.iut.montreuil.qdev.tp2025.gr22.jeuquizz.demo1.entity.Category</class>
        <class>org.univ_paris8.iut.montreuil.qdev.tp2025.gr22.jeuquizz.demo1.entity.Annonce</class>

        <properties>
            <!-- H2 In-Memory : la base existe uniquement pendant l'exécution -->
            <property name="jakarta.persistence.jdbc.driver" value="org.h2.Driver"/>
            <property name="jakarta.persistence.jdbc.url"
                      value="jdbc:h2:mem:testdb;DB_CLOSE_DELAY=-1;MODE=PostgreSQL"/>
            <property name="jakarta.persistence.jdbc.user" value="sa"/>
            <property name="jakarta.persistence.jdbc.password" value=""/>

            <!-- Hibernate recrée le schéma à chaque démarrage -->
            <property name="hibernate.hbm2ddl.auto" value="create-drop"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.H2Dialect"/>

            <!-- Désactiver les logs SQL en test (moins de bruit) -->
            <property name="hibernate.show_sql" value="false"/>
            <property name="hibernate.format_sql" value="false"/>

            <!-- Charger le jeu de données initial automatiquement -->
            <property name="jakarta.persistence.sql-load-script-source" value="test-data.sql"/>
        </properties>
    </persistence-unit>

</persistence>
